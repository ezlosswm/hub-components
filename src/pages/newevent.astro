---
import DashboardHeader from "../components/Dashboard/DashboardHeader.astro";
import DashboardContainer from "../components/Dashboard/Dashboard.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>New Event - Hub Components</title>
  </head>
  <body class="bg-gray-50">
    <DashboardHeader />

    <DashboardContainer>
      <div class="mt-16 max-w-2xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <form class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
          <div class="px-4 py-6 sm:p-8">
            <div class="max-w-2xl">
              <h2 class="text-base font-semibold leading-7 text-gray-900">Create New Event</h2>
              <p class="mt-1 text-sm leading-6 text-gray-600">
                Fill in the details below to create a new event.
              </p>

              <div class="mt-10 space-y-8">
                <div class="sm:col-span-4">
                  <label for="event-title" class="block text-sm font-medium leading-6 text-gray-900">
                    Event Title
                  </label>
                  <div class="mt-2">
                    <input
                      type="text"
                      name="event-title"
                      id="event-title"
                      class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6"
                      placeholder="Enter event title"
                    />
                  </div>
                </div>

                <div class="col-span-full">
                  <label for="description" class="block text-sm font-medium leading-6 text-gray-900">
                    Description
                  </label>
                  <div class="mt-2">
                    <textarea
                      id="description"
                      name="description"
                      rows="3"
                      class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6"
                      placeholder="Write a description for your event"
                    ></textarea>
                  </div>
                  <p class="mt-3 text-sm leading-6 text-gray-600">Write a few sentences about the event.</p>
                </div>

                  <div class=" sm:grid-cols-2">
                    <label for="start-date" class="block text-sm font-medium leading-6 text-gray-900">
                      Start Date
                    </label>
                    <div class="mt-2">
                      <input
                        type="datetime-local"
                        name="start-date"
                        id="start-date"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6"
                      />
                    </div>
                  </div>


                <div class="col-span-full">
                  <label for="photo" class="block text-sm font-medium leading-6 text-gray-900">
                  Cover Image
                  </label>
                  <div class="mt-2 flex items-center gap-x-3">
                    <div class="h-12 w-12 flex items-center justify-center rounded-lg bg-gray-100">
                      <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <input
                        aria-describedby="image upload"
                        type="file"
                        id="coverImg"
                        name="cover__img"
                        accept="image/*"
                        class="cursor-pointer block w-full text-sm md:text-base text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-sky-50 file:text-sky-700 hover:file:bg-sky-100"
                        required
                    />
                  </div>
                </div>

                <div class="col-span-full">
                    <label
                        for="HeadlineAct"

                      class="block text-sm font-medium leading-6 text-gray-900 flex-1"
                        >
                        Select Organizer
                    </label>

                        <select
                            name="organizer"
                            id="organizer"
                            class="mt-2 w-full text-sm rounded-lg border-gray-300"
                            >
                            <option value="">Please select</option>
                            <option value="JM">John Mayer</option>
                            <option value="SRV">Stevie Ray Vaughn</option>
                            <option value="JH">Jimi Hendrix</option>
                            <option value="BBK">B.B King</option>
                            <option value="AK">Albert King</option>
                            <option value="BG">Buddy Guy</option>
                            <option value="EC">Eric Clapton</option>
                        </select>
                </div>

              </div>
            </div>
          </div>
          <div class="flex items-center justify-end gap-x-4 border-t border-gray-900/10 px-4 py-4 sm:px-8">
            <button
              type="button"
              class="rounded-md px-3 py-2 text-sm font-semibold leading-6 text-gray-900 hover:bg-gray-50"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="rounded-md bg-gray-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600"
            >
              Create Event
            </button>
          </div>
        </form>
      </div>
    </DashboardContainer>

    <Footer />
  </body>
</html>
