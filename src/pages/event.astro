---
import Layout from "../layouts/Layout.astro";
import Overview from "../components/Dashboard/Overview.astro";
import { Image } from "astro:assets";
import card from "../assets/hero.jpg";
import { Icon } from "astro-icon/components";
---

<Layout>
  <div
    aria-label="Event details"
    class="w-full mx-auto px-4 sm:px-6 lg:px-8 py-8"
  >
    <div
      class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl overflow-hidden"
    >
      <div class="grid md:grid-cols-2 gap-0">
        <!-- Image Section -->
        <div class="relative h-64 md:h-full">
          <Image
            aria-label="Event image"
            src={card}
            alt="Event cover image"
            class="absolute inset-0 w-full h-full object-cover"
          />
        </div>

        <!-- Event Information -->
        <div class="p-6 md:p-8 lg:p-10">
          <!-- Header -->
          <div
            class="flex flex-col sm:flex-row sm:items-start justify-between gap-4"
          >
            <div>
              <h2 class="text-2xl sm:text-3xl font-bold text-gray-900">
                Two for One Drinks
              </h2>
              <div class="mt-2">
                <a
                  href="#"
                  class="group flex items-center gap-x-2 text-sm font-medium text-gray-600 hover:text-gray-900"
                >
                  <Icon name="mdi:store" class="size-6" />
                  Pancho's Drink House
                </a>
              </div>
            </div>
            <button
              class="inline-flex items-center gap-x-1.5 rounded-full bg-gray-100 px-3 py-1.5 text-sm font-semibold text-gray-600 hover:bg-gray-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600"
            >
              <Icon name="mdi:share" aria-label="Share event" class="h-4 w-4" />
              Share
            </button>
          </div>

          <!-- Event Details -->
          <div class="mt-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div class="flex items-center gap-x-2">
                <div class="rounded-lg bg-gray-100 p-2">
                  <Icon name="mdi:calendar" class="size-6 text-gray-600" />
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-600">Date</p>
                  <p class="mt-1 text-sm text-gray-900">March 15, 2024</p>
                </div>
              </div>
              <div class="flex items-center gap-x-2">
                <div class="rounded-lg bg-gray-100 p-2">
                  <Icon name="mdi:clock" class="size-6 text-gray-600" />
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-600">Time</p>
                  <p class="mt-1 text-sm text-gray-900">7:00 PM</p>
                </div>
              </div>
              <div class="flex items-center gap-x-2">
                <div class="rounded-lg bg-gray-100 p-2">
                  <Icon name="mdi:map-marker" class="size-6 text-gray-600" />
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-600">Location</p>
                  <p class="mt-1 text-sm text-gray-900">
                    123 Main St, Corozal Town
                  </p>
                </div>
              </div>
              <div class="flex items-center gap-x-2">
                <div class="rounded-lg bg-gray-100 p-2">
                  <Icon
                    name="mdi:circular-arrows"
                    class="size-6 text-gray-600"
                  />
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-600">Recurrence</p>
                  <p class="mt-1 text-sm text-gray-900">Annual</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Description -->
          <div class="mt-8">
            <h3 class="text-lg font-semibold text-gray-900">Description</h3>
            <p class="mt-2 text-sm text-gray-600">
              Join us for an amazing evening of great drinks and even better
              company! We're offering a special two-for-one deal on all our
              signature cocktails. Whether you're looking to unwind after work
              or start your weekend early, this is the perfect opportunity to
              try our extensive drink menu at an unbeatable price.
            </p>

            <!-- Tags/Filters -->
            <div class="mt-6">
              <div class="flex flex-wrap gap-2">
                <span
                  class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-600"
                >
                  Drinks
                </span>
                <span
                  class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-600"
                >
                  Happy Hour
                </span>
                <span
                  class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-600"
                >
                  Social
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
